# Flash size configuration
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y

# Partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# WiFi provisioning
CONFIG_ESP_WIFI_SOFTAP_BEACON_MAX_LEN=752
CONFIG_ESP_WIFI_MGMT_SBUF_NUM=32

# Task watchdog
CONFIG_ESP_TASK_WDT=y
CONFIG_ESP_TASK_WDT_TIMEOUT_S=30

# PSRAM Configuration (matching original working config)
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_USE_MALLOC=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=16384
CONFIG_SPIRAM_USE_CAPS_ALLOC=y

# CPU Frequency (matching original: 240MHz)
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Flash Mode (matching original: QIO)
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHMODE="qio"

# Camera configuration (for esp32-camera component)
CONFIG_SCCB_CLK_FREQ=100000
CONFIG_CAMERA_MODULE_ESP_EYE=n
CONFIG_CAMERA_MODULE_M5STACK_PSRAM=n
CONFIG_CAMERA_MODULE_M5STACK_WIDE=n
CONFIG_CAMERA_MODULE_AI_THINKER=n
CONFIG_CAMERA_MODULE_WROVER_KIT=y
CONFIG_CAMERA_DMA_BUFFER_SIZE_MAX=32768

# Bluetooth / BLE Configuration
CONFIG_BT_ENABLED=y
CONFIG_BT_BLE_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_NIMBLE_ROLE_PERIPHERAL=y
CONFIG_BT_NIMBLE_ROLE_BROADCASTER=y
CONFIG_BT_NIMBLE_EXT_ADV=n
CONFIG_BT_NIMBLE_MAX_CONNECTIONS=1

# WiFi Provisioning BLE
CONFIG_WIFI_PROV_BLE_ENABLE=y
CONFIG_WIFI_PROV_SCHEME_BLE=y
CONFIG_WIFI_PROV_BLE_FORCE_ENCRYPTION=y
